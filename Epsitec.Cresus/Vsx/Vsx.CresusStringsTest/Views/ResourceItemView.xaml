<!-- DataContext = ResourceItemViewModel -->
<UserControl
	x:Class="Epsitec.Cresus.Strings.ResourceItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:w="clr-namespace:Epsitec.Windows;assembly=Vsx.CresusStrings"
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300">
	
	<UserControl.Resources>
		<ResourceDictionary Source="pack://application:,,,/Vsx.CresusStrings;component/CresusStrings.xaml"/>
	</UserControl.Resources>
	
	<Grid>
		<TextBlock Name="text1" w:TextLayout.Html="{Binding Value}"/>
	</Grid>
</UserControl>
